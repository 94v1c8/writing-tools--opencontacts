<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editText_dialpad_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="number" />

    <ImageButton
        android:id="@+id/button_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_dialpad_number"
        android:layout_alignStart="@+id/editText_dialpad_number"
        android:layout_below="@+id/editText_dialpad_number"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_call_black_24dp" />

    <ImageButton
        android:id="@+id/button_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_call"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_chat_black_24dp" />

    <ImageButton
        android:id="@+id/button_add_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText_dialpad_number"
        android:layout_alignRight="@+id/editText_dialpad_number"
        android:layout_alignTop="@+id/button_message"
        android:src="@drawable/ic_add_black_24dp" />
</RelativeLayout>