<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="16dp"
        app:srcCompat="@android:drawable/sym_action_call"
        android:src="@android:drawable/sym_action_call"
        android:id="@+id/button_call"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button_message"
        android:layout_toStartOf="@+id/button_message" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="16dp"
        app:srcCompat="@android:drawable/stat_notify_chat"
        android:src="@android:drawable/stat_notify_chat"
        android:id="@+id/button_message"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_full_name"
        android:text="name"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/sym_call_incoming"
        android:src="@android:drawable/sym_call_incoming"
        android:maxWidth="2dp"
        android:maxHeight="2dp"
        android:id="@+id/image_button_call_type"
        android:layout_alignBottom="@+id/textview_phone_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textview_phone_number" />

    <TextView
        android:text="phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_phone_number"
        android:layout_alignBottom="@+id/button_call"
        android:layout_toRightOf="@+id/image_button_call_type"
        android:layout_toEndOf="@+id/image_button_call_type" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/duration_of_call"
        android:text="00:00"
        android:layout_alignBaseline="@+id/textview_phone_number"
        android:layout_alignBottom="@+id/textview_phone_number"
        android:layout_toRightOf="@+id/textview_phone_number"
        android:layout_toEndOf="@+id/textview_phone_number"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

</RelativeLayout>