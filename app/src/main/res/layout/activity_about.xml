<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="About" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?colorPrimaryDark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/content_about" />

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:shrinkColumns="1">

                <TableRow>

                    <TextView
                        android:padding="3dp"
                        android:text="@string/author_label"
                        android:textAppearance="?android:textAppearanceSearchResultTitle"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:padding="3dp"
                        android:text="@string/my_name" />
                </TableRow>

                <TableRow android:gravity="fill">

                    <TextView
                        android:padding="3dp"
                        android:text="@string/issues_label"
                        android:textAppearance="?android:textAppearanceSearchResultTitle"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:autoLink="web"
                        android:padding="3dp"
                        android:text="@string/issues_link" />
                </TableRow>

                <TableRow android:gravity="fill">

                    <TextView
                        android:padding="3dp"
                        android:text="@string/more_apps"
                        android:textAppearance="?android:textAppearanceSearchResultTitle"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:autoLink="web"
                        android:padding="3dp"
                        android:text="@string/more_apps_link" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
